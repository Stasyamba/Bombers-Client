<?xml version="1.0" encoding="utf-8"?>
<s:Button xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:mx="library://ns.adobe.com/flex/mx"
          useHandCursor="true" buttonMode="true">
    <fx:Declarations>
        <!-- Place non-visual elements (e.g., services, value objects) here -->
    </fx:Declarations>

    <fx:Script>
		<![CDATA[
        public static const TYPE_NONE:int = -1;
        public static const TYPE_GAME_WITH_FRIEND_WINDOW:int = 0;
        public static const TYPE_MARKET_BLOCK_WEAPON:int = 1;

        [Bindable]
        private var _type:int = TYPE_NONE;

        [Bindable]
        public var scale:Number = 1;

        [Bindable]
        public var hueShift:int = 0;

        [Bindable]
        public var saturationShift:Number = 1;

        public function get type():int {
            return _type;
        }

        public function set type(value:int):void {
            _type = value;
        }
        ]]>
	</fx:Script>


</s:Button>
